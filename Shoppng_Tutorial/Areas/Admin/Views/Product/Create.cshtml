@model ProductModel
@{
    ViewData["title"] = "Create product";
}
<h4>Thêm Sản Phẩm</h4>
<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Tên sản phẩm</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"/>
        </div>
        <div class="form-group">
            <label>Giá bán</label>
            <input asp-for="Price" parttern="[0-9.,]+" class="form-control typing-price" />
            <span id="price-convert"></span>
            <span asp-validation-for="Price" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Giá vốn</label>
            <input asp-for="CapitalPrice" class="form-control" />
            <span asp-validation-for="CapitalPrice" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Mô tả</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Danh mục</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                <option>--Chọn 1 danh mục</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Thương hiệu</label>
            <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands">
                <option>--Chọn 1 thương hiệu</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Hình ảnh</label>
            <input asp-for="ImageUpload" class="form-control" />
            <span asp-validation-for="ImageUpload" class="text-danger" />
            <img id="imgpreview" class="pt-2"/>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Tạo</button>
        </div>
    </form>
    <a asp-action="Index" asp-controller="Product">Quay lại</a>
</div>
