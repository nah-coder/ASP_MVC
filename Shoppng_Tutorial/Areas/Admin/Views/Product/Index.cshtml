@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";


}
<h3>Danh Sách Sản Phẩm</h3>
<a class="btn btn-primary" asp-action="Create" asp-controller="Product">Thêm Sản Phẩm</a>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên Sản Phẩm</th>
            <th scope="col">Số Lượng</th>
            <th scope="col">Đã Bán</th>
            <th scope="col">Mô Tả</th>
            <th scope="col">Giá Bán</th>
            <th scope="col">Giá Vốn</th>
            <th scope="col">Hình Ảnh</th>
            <th scope="col">Slug</th>
            <th scope="col">Danh Mục</th>
            <th scope="col">Thương Hiệu</th>
            <th scope="col">Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td><b>@item.Quantity</b><br /></td>
                <td><b>@item.Sold</b></td>
                <td>@Html.Raw(@item.Description)</td>
                <td>@item.Price.ToString("#,##0 VNĐ")</td>
                <td>@item.CapitalPrice.ToString("#,##0 VNĐ")</td>
                <td><img src="~/media/products/@item.Image" width="120" height="120" /></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-Id="@item.Id">Cập Nhật</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Product" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }



    </tbody>
</table>

