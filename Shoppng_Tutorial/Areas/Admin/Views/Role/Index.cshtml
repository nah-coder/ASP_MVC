@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "Role Listed";


}
<h3>Danh Sách Quyền Hạn</h3>
<a class="btn btn-primary" asp-action="Create" asp-controller="Role">Thêm Quyền Hạn</a>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên Quyền Hạn</th>
            <th scope="col">Quyền</th>

            <th scope="col">Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.NormalizedName</td>

                <td>
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Role" asp-route-Id="@item.Id">Cập Nhật</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Role" asp-route-Id="@item.Id">Xóa</a>
                </td>
            </tr>
        }



    </tbody>
</table>


