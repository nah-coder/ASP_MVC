@model LoginViewModel
@{
	ViewData["Title"] = "Register";
}

<section id="">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Đăng Nhập</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">
						<div class="form-group">
							<label>Tên Đăng Nhập</label>
							<input asp-for="Username" class="form-control" />
							<span asp-validation-for="Username" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Mật Khẩu</label>
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>

						<button class="btn btn-default">Đăng Nhập</button>
						<a asp-action="LoginByGoogle" asp-controller="Account">Đăng nhập bằng gmail</a> <br />
						<a asp-action="Create" asp-controller="Account">Tạo tài khoản mới</a> <br />
						<a asp-action="ForgetPass" asp-controller="Account">Quên mật khẩu</a>
					</form>
				</div><!--/login form-->
			</div>

		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

}