@model ContactModel

<div class="contact-container row">

    <!-- Map + Mô tả -->
    <div class="col-md-4 mb-4">
        <div class="contact-card shadow p-4 rounded-4 bg-light">
            <div class="ratio ratio-4x3 rounded overflow-hidden">
                @Html.Raw(Model.Map)
            </div>
            <div class="mt-3 text-secondary" style="font-size: 1.05rem;">
                @Html.Raw(Model.Description)
            </div>
        </div>
    </div>

    <!-- Thông tin liên hệ -->
    <div class="col-md-4 mb-4">
        <div class="contact-card shadow p-4 rounded-4 bg-white">
            <h5 class="fw-bold text-primary mb-4">📍 Thông tin liên hệ</h5>
            <p><i class="bi bi-person-circle me-2 text-secondary"></i><strong>Tên:</strong> @Model.Name</p>
            <p><i class="bi bi-envelope-fill me-2 text-secondary"></i><strong>Email:</strong> @Model.Email</p>
            <p><i class="bi bi-telephone-fill me-2 text-secondary"></i><strong>Điện thoại:</strong> @Model.Phone</p>
        </div>
    </div>

    <!-- Facebook Fanpage -->
    <div class="col-md-4 mb-4">
        <div class="contact-card shadow p-4 rounded-4 bg-white">
            <h5 class="fw-bold text-primary mb-4">🌐 Fanpage Facebook</h5>
            <div id="fb-root"></div>
            <div class="fb-page"
                 data-href="https://www.facebook.com/Daihoc.uneti/"
                 data-tabs="timeline"
                 data-width=""
                 data-height="400"
                 data-small-header="false"
                 data-adapt-container-width="true"
                 data-hide-cover="false"
                 data-show-facepile="true">
                <blockquote cite="https://www.facebook.com/Daihoc.uneti/" class="fb-xfbml-parse-ignore">
                    <a href="https://www.facebook.com/Daihoc.uneti/">UnetiBoutiQue</a>
                </blockquote>
            </div>
        </div>
    </div>

</div>

<style>
    .contact-container {
        margin-top: 40px;
        margin-bottom: 60px;
    }

    .contact-card {
        border-radius: 16px;
        transition: all 0.3s ease-in-out;
    }

        .contact-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        }

        .contact-card h5 {
            font-size: 1.4rem;
        }

        .contact-card p {
            font-size: 1.1rem;
            margin-bottom: 14px;
            color: #333;
        }

    .ratio {
        border-radius: 12px;
        overflow: hidden;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">