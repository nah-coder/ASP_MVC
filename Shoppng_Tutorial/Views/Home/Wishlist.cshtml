@{
    ViewData["title"] = "List Wishlist";
    var key = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <h3>Danh Sách Yêu Thích</h3>


    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Mã</th>
                <th>Tên Sản Phẩm</th>
                <th>Mô Tả</th>
                <th>Giá</th>
                <th>Ảnh</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var wishlist_product in Model)
            {
                key++;
                <tr>
                    <td>@key</td>
                    <td>@wishlist_product.product.Name</td>
                    <td>@Html.Raw(@wishlist_product.product.Description)</td>
                    <td>@wishlist_product.product.Price.ToString("#,##0 VNĐ")</td>
                    <td> <img src="~/media/products/@wishlist_product.product.Image" width="120px" height="150px" /> </td>
                    <td><a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteWishlist" asp-controller="Home" asp-route-Id="@wishlist_product.wishlists.Id">Xóa</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>
